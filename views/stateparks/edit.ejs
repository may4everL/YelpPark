<% layout('layouts/boilerplate') %>
<h1 class="text-center">Edit the Park</h1>
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form action="/stateparks/<%= statepark._id %>?_method=PUT" method='POST' class="needs-validation" novalidate
            enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" id='title' name='statepark[title]' class="form-control"
                    value="<%= statepark.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" id='location' name='statepark[location]' class="form-control"
                    value="<%= statepark.location %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <label for="price" class="form-label mb-3">Price: </label>
            <div class="input-group mb-3">
                <span class="input-group-text" id='price'>$</span>
                <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)"
                    name="statepark[price]" value="<%= statepark.price %>" required>
                <span class="input-group-text">.00</span>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">description</label>
                <textarea type="text" id='description' name='statepark[description]' class="form-control"
                    requiredS><%= statepark.description %></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="custom-file mb-3">
                <input type="file" class="custom-file-input" id="image" name="image" multiple>
                <label class="custom-file-label" for="image">Add more images</label>
            </div>
            <div class="mb-3">
                <% statepark.images.forEach((img, i) => { %>
                <div>
                    <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
                    </div>
                    <label for="image-<%= i %>">Delete?</label>
                </div>
                <% }) %>
            </div>
            <button class="btn btn-warning">Update park</button>
        </form>
        <footer>
            <a href="/stateparks">Back to all parks</a>
        </footer>
    </div>
</div>