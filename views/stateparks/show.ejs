<% layout('layouts/boilerplate') %>
<link rel='stylesheet' href="/stylesheets/stars.css">
<div class="row">
    <div class="col-6">
        <div id="imageCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <% statepark.images.forEach((img, i) => { %>
                <div class="carousel-item <%= i===0 ? 'active' : '' %>">
                    <img class="d-block w-100" src="<%= img.url %>" alt="">
                </div>
                <% }) %>
                <% if(statepark.images.length > 1) { %>
                <a class="carousel-control-prev" href="#imageCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#imageCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
                <% } %>
            </div>
        </div>
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title"><%= statepark.title %></h5>
                <p class="card-text"><%= statepark.description %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">$<%= statepark.price%>/per visit</li>
                <li class="list-group-item"><%= statepark.location%></li>
                <li class="list-group-item">Created By <%= statepark.author.username%></li>
            </ul>
            <% if(currentUser && statepark.author.equals(currentUser)) { %>
            <div class="card-body">
                <a class="card-link btn btn-warning" href="/stateparks/<%=statepark._id%>/edit">Edit</a>
                <form class="d-inline" action="/stateparks/<%=statepark._id%>?_method=DELETE" method='POST'>
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
            <% } %>
            <div class="card text-center mb-3">
                <div class="card-footer text-muted">
                    <a href="/stateparks" class="text-reset text-decoration-none">Back to all parks</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6">
        <div id='map'></div>
        <% if(currentUser) {%>
        <h2>Leave Your Comments Here</h2>
        <form action="/stateparks/<%= statepark._id %>/reviews" method="POST" class="mb-3 needs-validation" novalidate>
            <fieldset class="starability-basic">
                <legend>First rating:</legend>
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked
                    aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
            <div class="mb-3">
                <label class='form-label' for="body">Your comment</label>
                <textarea name="review[body]" id="body" cols="30" rows="3" class="form-control" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <button class="btn btn-primary">Submit</button>
            </div>
        </form>
        <% } else { %>
        <h4>Wanna leave your comment? <a href="/register">Sign up</a> or <a href="/login">login</a></h4>
        <% } %>
        <div class="mb-3">
            <% for(let review of statepark.reviews) {%>
            <div class="card mb-3">
                <h3 class="ml-3 my-3"><%= review.author.username %></h3>
                <p class="starability-result" data-rating="<%= review.rating %>">
                    Rated: <%= review.rating %> stars
                </p>
                <p class="card-body"><%= review.body %> </p>
                <% if(currentUser && review.author.equals(currentUser)) { %>
                <form action="/stateparks/<%= statepark._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST"
                    class="ml-3 mb-3">
                    <button class="btn btn-danger">Delete this comment</button>
                </form>
                <% } %>
            </div>
            <% } %>
        </div>
    </div>
</div>
<script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
    const statepark = <%- JSON.stringify(statepark) %>;
</script>
<script src="/javascripts/showPageMap.js"></script>